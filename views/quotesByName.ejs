<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1 style='text-align:center;'> FOUND AUTHOR </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='col-sm-4 btn btn-info btn-block'onclick='location.href="/";'>Search Again</button>
            <div class='col-sm-4'></div>
        </div>
    </div>

    
    <h3>Quotes from <%=author.firstName + " " + author.lastName%></h3>
    <ul>
        <%quotes.forEach(function(q){%>
            <span><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
              <%=author.firstName + " " + author.lastName%>
            </button>
            
            <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle"><%=author.firstName%> <%=author.lastName%></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <img class='col-sm-4 portrait' src=<%=author.portrait%> />
        		    <div class='info'>
        		        <div><strong>Born: </strong><%=author.dob.toString().split(' ').slice(0, 4).join(' ')%></div>
        		        <div><strong>Dead: </strong><%=author.dod.toString().split(' ').slice(0, 4).join(' ')%></div>
        		        <div><strong>Sex: </strong><%=author.sex%></div>
        		        <div><strong>Profession: </strong><%=author.profession%></div>
        		        <div><strong>Country: </strong><%=author.country%></div>
        		        <div class='bio'><strong>Bio: </strong><%=author.biography%></div>
        		    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
             </span>
            <li>
                <%=q.quote%>
            </li>
            
        <%});%>
    </ul>
</div>

<%- include ('templates/footer'); -%>