<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1 style="text-align: center;"> Search Quotes By </h1>
		
		<%- include ('templates/nav'); -%>

	<form action='/categorysearch' method='GET'>
		<div class='form-group row'>
			<label for='category' class='col-sm-4 col-form-label'> Category </label>
			<div class='col-sm-4'>
			    <select type='text' class='form-control' name="category" id='category'>
				    <%list.forEach(function(c) {%>
				        <option> <%=c%> </option>
				 <%});%>
				 </select>
			</div>
		</div>
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Search Category</button>
			</div>
		</div>
	</form>
</div>
</div>

<%- include ('templates/footer'); -%>
