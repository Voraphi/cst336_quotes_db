<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1 style="text-align: center;"> Search Quotes By </h1>
		
		<%- include ('templates/nav'); -%>

	<form action='/sexSearch' method='GET'>
	    <div style="text-align:center;">
            <!--<div class="col-sm-5"></div>-->
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="male" value="M" checked>
              <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="female" value="F">
              <label class="form-check-label" for="female">Female</label>
            </div>
        </div>
        <br/>
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Search Category</button>
			</div>
		</div>
	</form>
</div>
</div>

